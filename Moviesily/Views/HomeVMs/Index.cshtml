@model Moviesily.ViewModels.HomeVM

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-3">
    There are @Model.Review review(s)
    <a href="/Review/Index"><input type="submit" value="Go to reviews" class="belize-hole-flat-button searchButton" /></a>
</div>

<div class="col-lg-9" style="margin-top: 20px">
    <h2 class="searchTitle">SEARCH MOVIES:</h2>
    @Html.TextBox("SearchString")
    <input type="submit" value="Search Movies" class="belize-hole-flat-button" />
</div>

<div class="col-lg-3 genres">

    @foreach (var item in Model.Genres)
    {

        <a href="/HomeVMs/Browse?genre=@item.GenreName"><input type="submit" value="@item.GenreName" class="belize-hole-flat-button"></a><br />

    }
</div>
@foreach (var item in Model.Movies)
{
    <div class="col-lg-3 movies">
        <img src="@item.Image" width="250" height="350" />
        <label>Title |</label> @Html.DisplayFor(modelItem => item.Title)<br />
        <label>Director |</label> @Html.DisplayFor(modelItem => item.Director)<br />
        <label>ReleaseYear |</label> @Html.DisplayFor(modelItem => item.ReleaseYear)<br />
        <label>Language |</label> @Html.DisplayFor(modelItem => item.Language)<br />
        <label>Descripton |</label> @Html.DisplayFor(modelItem => item.Description)<br />
    </div>
}












