@model Moviesily.ViewModels.HomeVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="col-lg=12">

    <div class="col-lg-2">

        @foreach (var item in Model.Genres)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.GenreName, "Details", "HomeVMs", new { id = item.GenreID }, new { @class = "btn btn-default btn-large btn-block" }) <br />
                </td>
            </tr>

        }

        

    </div>

    <div class="col-lg-10">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Director</th>
                    <th>ReleaseYear</th>
                    <th>Language</th>
                    <th>Description</th>
                </tr>
            </thead>
            @foreach (var item in Model.Movies)
            {


                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td> @Html.DisplayFor(modelItem => item.Director)</td>
                        <td>@Html.DisplayFor(modelItem => item.ReleaseYear)</td>
                        <td> @Html.DisplayFor(modelItem => item.Language)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <img src="@item.Image" width="100" height="150" />
                        </td>
                    </tr>
                </tbody>

            }
        </table>
    </div>
</div>

