@model Moviesily.ViewModels.HomeVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="col-lg=12">
       
    <div class="col-lg-2">

        @foreach (var item in Model.Genres)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.GenreName, "Index", "Reviews", null, new { @class = "btn btn-default btn-large btn-block" }) <br />
                </td>
            </tr>

        }
    </div>

    <div class="col-lg-10">
        <table>
        @foreach (var item in Model.Movies)
        {
          
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)

                   
                    @Html.DisplayFor(modelItem => item.Director)
                    @Html.DisplayFor(modelItem => item.Image)
                    <img src="@item.Image" width="100" height="150"/>
                </td>
            </tr>
           
        }
            </table>
    </div>
    </div>
